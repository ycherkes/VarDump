<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
	<LangVersion>latest</LangVersion>
	<AssemblyName>VarDumpExtended</AssemblyName>
	<AssemblyVersion>0.2.8</AssemblyVersion>
	<FileVersion>0.2.8</FileVersion>
	<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
	<Copyright>Copyright $([System.DateTime]::Now.Year) Yevhen Cherkes</Copyright>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Title>VarDumpExtended</Title>
	<Version>0.2.8</Version>
	<Description>VarDumpExtended is a utility for serialization runtime objects to C# and Visual Basic string.</Description>
	<PackageProjectUrl>https://github.com/ycherkes/VarDump/tree/feature/vardump-extended-configurable-known-types</PackageProjectUrl>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<RepositoryUrl>https://github.com/ycherkes/VarDump/tree/feature/vardump-extended-configurable-known-types</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<PackageTags>dump;dumpobject;c#;visulabasic;debug</PackageTags>
	<NeutralLanguage>en</NeutralLanguage>
	<RootNamespace>$(MSBuildProjectName.Replace(" ", "_"))Extended</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <InternalsVisibleTo Include="UnitTests" />
  </ItemGroup>

</Project>
